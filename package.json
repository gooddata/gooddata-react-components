{
  "name": "@gooddata/data-layer",
  "version": "0.0.22",
  "description": "",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "typescript": {
    "definition": "dist/index.d.ts"
  },
  "dependencies": {
    "lodash": "4.17.4"
  },
  "devDependencies": {
    "@types/jest": "18.1.1",
    "@types/lodash": "4.14.61",
    "@types/node": "7.0.8",
    "jest": "19.0.2",
    "jest-junit": "1.3.0",
    "ts-jest": "19.0.14",
    "tslint": "5.4.3",
    "tslint-config-gooddata": "0.0.2",
    "typescript": "2.2.2"
  },
  "scripts": {
    "test": "jest",
    "watchTest": "jest --watch",
    "dev": "rm -rf dist && tsc -d --outDir dist --watch",
    "prepublish": "rm -rf dist && tsc -d --outDir dist",
    "tslint": "tslint --format verbose --config tslint.json index.ts src/**/*.ts",
    "tslint-ci": "mkdir -p ./ci/results && tslint --config tslint.json --format checkstyle --out ./ci/results/tslint-results.xml index.ts src/**/*.ts",
    "validate": "tsc -p tsconfig.base.json --noEmit && yarn tslint"
  },
  "author": "GoodData",
  "license": "SEE LICENSE IN LICENSE.txt",
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.ts$",
    "testResultsProcessor": "<rootDir>/node_modules/ts-jest/coverageprocessor.js",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
